.side-bar
  .header-left
    .user-info
      .user-info__user-name
        = current_user.name
      .user-info__icon
        .user-info__icon__edit-btn
          = link_to new_group_path, class: "btn" do
            = icon('far', 'edit')
        .user-info__icon__setting-btn
          = link_to edit_user_path(current_user), class: "btn" do
            = icon('fas', 'cog')

  .group-list
    - current_user.groups.each do |group|
      .group-list__group 
        = link_to group_messages_path(group.id), class: "group-message-link" do
          .group-list__group__name
            = group.group_name
          .group-list__group__message
            = group.show_last_message