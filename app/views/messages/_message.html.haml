.message
  .message__info
    .message__info__user-name
      = message.user.name
    .message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__content
    - if message.content.present?
      .message__content__text
        = message.content
    - if message.image.present?
      = image_tag message.image.url, class: '.message__content__image'
